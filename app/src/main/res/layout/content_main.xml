<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".MainActivity"
tools:showIn="@layout/app_bar_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height" />

    <ImageView
        android:id="@+id/Smoothie1"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/strawberrybanana"
        android:focusable="true"
        android:onClick="Smoothie1"
        android:src="@mipmap/si" />

    <TextView
        android:id="@+id/t_strawberrybanana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/strawberrybanana"
        android:textAlignment="center"
        android:textSize="@dimen/content_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height" />

    <ImageView
        android:id="@+id/Smoothie2"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/greensmoothie"
        android:focusable="true"
        android:onClick="Smoothie2"
        app:srcCompat="@mipmap/di"/>

    <TextView
        android:id="@+id/t_greensmoothie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/greensmoothie"
        android:textAlignment="center"
        android:textSize="@dimen/content_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height" />

    <ImageView
        android:id="@+id/Smoothie3"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/peachsmoothie"
        android:focusable="true"
        android:onClick="Smoothie3"
        app:srcCompat="@drawable/peachsmoothie" />

    <TextView
        android:id="@+id/t_peachsmoothie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/peachsmoothie"
        android:textAlignment="center"
        android:textSize="@dimen/content_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height" />

    <ImageView
        android:id="@+id/Smoothie4"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/carrotcake"
        android:focusable="true"
        android:onClick="Smoothie4"
        app:srcCompat="@drawable/carrotcakesmoothie" />

    <TextView
        android:id="@+id/t_carrotcakesmoothie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrotcake"
        android:textAlignment="center"
        android:textSize="@dimen/content_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height" />

    <ImageView
        android:id="@+id/Smoothie5"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/blueberrypie"
        android:focusable="true"
        android:onClick="Smoothie5"
        app:srcCompat="@drawable/blueberrypiesmoothie" />

    <TextView
        android:id="@+id/t_blueberrypiesmoothie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blueberrypie"
        android:textAlignment="center"
        android:textSize="@dimen/content_font"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_bottom" />

</LinearLayout>
</android.support.v4.widget.NestedScrollView>